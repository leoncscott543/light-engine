// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu

// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
{
	// Name for your dev container
	"name": "light-engine-docker-dev-container",

	// Use a custom Dockerfile as the single source of truth for all dependencies
	"dockerFile": "../Dockerfile",

	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/rust:1": {},
		"ghcr.io/devcontainers/features/cmake:1":{},
		"ghcr.io/devcontainers/features/python:1": {}
	},

	// Forward commonly used ports (add or remove as needed)
    "forwardPorts": [8080],

	// Optionally, run a command after the container is created
	// "postCreateCommand": "uname -a",

	// Optionally, configure tool-specific properties
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}